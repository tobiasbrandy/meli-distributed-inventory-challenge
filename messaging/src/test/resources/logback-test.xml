<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.tobiasbrandy.meli.inventory.messaging.OutboxEventPublisher" level="OFF"/>
  <logger name="com.tobiasbrandy.meli.inventory.messaging.EventListener" level="WARN"/>

  <root level="WARN">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>

